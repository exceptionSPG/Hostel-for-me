<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="20dp"
    tools:context=".Activity.HostelRequestActivity">

<!--    hostel_name, hostel_location,-->
<!--    hostel_type, owner_name, contact_number, hostel_email-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:drawablePadding="16dp"
                android:weightSum="100"
                android:background="@color/profile_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_home"
                    android:ems="6"
                    android:textSize="14sp"
                    android:text="Hostel Name: "
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/et_hostel_request_hostel_name"
                    android:layout_width="match_parent"
                    android:ems="8"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="@android:color/black"
                    android:layout_height="match_parent"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:drawablePadding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_location"
                    android:ems="6"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Address: "
                    />
                <EditText
                    android:id="@+id/et_hostel_request_hostel_address"
                    android:layout_width="match_parent"
                    android:ems="8"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/profile_bg"
                android:drawablePadding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_person"
                    android:ems="6"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Hostel Type: "
                    />
                <EditText
                    android:id="@+id/et_hostel_request_hostel_type"
                    android:layout_width="match_parent"
                    android:ems="8"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:drawablePadding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_person"
                    android:ems="6"
                    android:textSize="12sp"
                    android:text="Owner Name:  "
                    />
                <EditText
                    android:id="@+id/et_hostel_request_owner_name"
                    android:layout_width="match_parent"
                    android:ems="8"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_height="match_parent"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:drawablePadding="16dp"
                android:background="@color/profile_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_phone"
                    android:ems="6"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Contact Number "
                    />
                <EditText
                    android:id="@+id/et_hostel_request_contact_number"
                    android:layout_width="match_parent"
                    android:ems="8"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:drawablePadding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Email:"
                    android:gravity="center"
                    android:ems="6"
                    android:drawableStart="@drawable/ic_email"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_hostel_request_hostel_email"
                    android:ems="10"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >

    </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
   android:layout_gravity="bottom"
    >
    <TextView
        android:id="@+id/tv_send_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="Send Request"
        android:textColor="#651FFF"
        android:textSize="22sp"
        android:textStyle="bold" />
</LinearLayout>


</LinearLayout>