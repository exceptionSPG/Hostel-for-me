<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_user_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_user_DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Select Date of Birth.."
                android:inputType="date"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text="Gender"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:entries="@array/gender"
                    android:padding="10dp" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_user_guardian_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Guardian Name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_guardian_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Guardian Contact Number"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <!--<EditText
                android:id="@+id/et_user_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="education"
                android:inputType="text"/>-->
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#090909" />

            <Spinner
                android:id="@+id/spinner_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:entries="@array/level"
                android:padding="10dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false" />

            <Spinner
                android:id="@+id/spinner_stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:entries="@array/plustwo_stream"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_user_about_you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ECE8E8"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Something about you..."
                android:inputType="textMultiLine"
                android:minLines="5" />

            <Button
                android:id="@+id/btn_saveInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_bg"
                android:onClick="btn_SaveInfoClick"
                android:padding="10dp"
                android:text="Save Info"
                android:textColor="#651FFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>

