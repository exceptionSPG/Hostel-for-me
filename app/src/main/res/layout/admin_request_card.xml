<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    android:id="@+id/admin_request_cardview"
    android:onClick="cardOnlick"
    app:cardBackgroundColor="#E1E3E4">


        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_request_card_hostel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="50"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_home"
                    android:text="Hostel Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_request_card_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="50"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_person"
                    android:text="Owner Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_request_card_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableStart="@drawable/enquiry_email"
                    android:drawablePadding="2dp"
                    android:layout_weight="70"
                    android:padding="5dp"
                    android:text="Status"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/tv_request_card_request_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="30"
                    android:layout_marginLeft="12dp"
                    android:drawableStart="@drawable/request_calendar"
                    android:drawablePadding="2dp"
                    android:padding="5dp"
                    android:text="Request Date: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="11dp" />
            </LinearLayout>



        </LinearLayout>

</androidx.cardview.widget.CardView>