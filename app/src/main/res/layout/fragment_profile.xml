<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ProfileFragement"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_gravity="top|center"
            android:src="@drawable/ic_person"
            app:civ_border_color="@color/profile_bg"
            app:civ_border_width="2dp"
            android:background="@color/profile_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp"
            android:weightSum="100"
            android:background="@color/profile_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:ems="6"
                android:textSize="16sp"
                android:text="Name: "
                android:textStyle="bold"
                />
            <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:ems="8"
            android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:ems="6"
                android:textSize="16sp"
                android:text="Email: "
                />
            <TextView
                android:layout_width="match_parent"
                android:ems="8"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_email"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp"
            android:background="@color/profile_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:ems="6"
                android:textSize="16sp"
                android:text="Phone: "
                />
            <TextView
                android:layout_width="match_parent"
                android:ems="8"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_phone_number"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:ems="6"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Address: "
                />
            <TextView
                android:layout_width="match_parent"
                android:ems="8"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_address"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp"
            android:background="@color/profile_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendar"
                android:ems="6"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="DOB: "
                />
            <TextView
                android:layout_width="match_parent"
                android:ems="8"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_dob"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:ems="6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gender"
                android:ems="10"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp"
            android:background="@color/profile_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person"
                android:ems="6"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Guardian: "
                />
            <TextView
                android:layout_width="match_parent"
                android:ems="8"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_guardian_name"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_call_24"
                android:drawablePadding="10dp"
                android:ems="6"
                android:text="Guardian Contact: "
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:ems="8"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tv_guardian_contact_number"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp"
            android:background="@color/profile_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_education"
                android:drawablePadding="10dp"
                android:ems="6"
                android:text="Education: "
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:ems="8"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_education"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:drawablePadding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person"
                android:ems="6"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="About You: "
                />
            <TextView
                android:layout_width="match_parent"
                android:ems="8"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/tv_user_about_you"/>

        </LinearLayout>
        <Button
            android:id="@+id/btn_editInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_bg"
            android:padding="10dp"
            android:text="Edit Info"
            android:textColor="#651FFF"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>


    </ScrollView>
</FrameLayout>