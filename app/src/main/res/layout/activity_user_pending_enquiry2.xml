<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.User.UserPendingEnquiryActivity">



    <TextView
        android:id="@+id/tv_user_pending_enquiry_no_data_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No data found."
        android:gravity="center|center_vertical"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_pending_enquiry_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/user_pending_enquiry_recycler_items"
        />


</LinearLayout>